# Personal AI Employee - Watcher Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# VAULT CONFIGURATION
# ============================================================================
# Absolute path to your Obsidian vault
VAULT_PATH=C:\Users\YourName\Desktop\My Vault

# ============================================================================
# GMAIL WATCHER CONFIGURATION
# ============================================================================
# Gmail API credentials file path (download from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=C:\Users\YourName\Desktop\My Vault\watchers\credentials\credentials.json

# Gmail check interval in seconds (default: 120 = 2 minutes)
GMAIL_CHECK_INTERVAL=120

# Gmail query (default: unread important emails)
GMAIL_QUERY=is:unread is:important

# ============================================================================
# WHATSAPP WATCHER CONFIGURATION
# ============================================================================
# WhatsApp browser session path (persistent login)
WHATSAPP_SESSION_PATH=C:\Users\YourName\Desktop\My Vault\watchers\whatsapp_session

# WhatsApp check interval in seconds (default: 30)
WHATSAPP_CHECK_INTERVAL=30

# WhatsApp urgent keywords (comma-separated)
WHATSAPP_KEYWORDS=urgent,asap,emergency,invoice,payment,help,critical

# Run browser in headless mode (true/false)
WHATSAPP_HEADLESS=true

# ============================================================================
# CALENDAR WATCHER CONFIGURATION
# ============================================================================
# Google Calendar API credentials file path (download from Google Cloud Console)
CALENDAR_CREDENTIALS_PATH=C:\Users\YourName\Desktop\My Vault\watchers\credentials\calendar_credentials.json

# Calendar check interval in seconds (default: 300 = 5 minutes)
CALENDAR_CHECK_INTERVAL=300

# Hours ahead to look for events (default: 48)
CALENDAR_HOURS_AHEAD=48

# Minimum hours ahead to notify (default: 1)
CALENDAR_MIN_HOURS_AHEAD=1

# Calendar IDs to monitor (comma-separated, default: primary)
CALENDAR_IDS=primary

# ============================================================================
# FILESYSTEM WATCHER CONFIGURATION
# ============================================================================
# Folder to monitor (relative to vault or absolute path)
FILESYSTEM_WATCH_PATH=Inbox

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Keep logs for N days before rotation
LOG_RETENTION_DAYS=30

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Dry run mode - log actions without executing (true/false)
DRY_RUN=false

# Maximum actions per hour (rate limiting)
MAX_ACTIONS_PER_HOUR=50

# ============================================================================
# DEVELOPER SETTINGS
# ============================================================================
# Enable debug mode with verbose logging (true/false)
DEBUG_MODE=false

# Save screenshots on errors (true/false)
SAVE_ERROR_SCREENSHOTS=true
